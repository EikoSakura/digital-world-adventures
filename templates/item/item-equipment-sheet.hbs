<form class="{{cssClass}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" width="64" height="64"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Equipment Name"/></h1>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="attributes">Attributes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab description" data-group="primary" data-tab="description">
      {{editor system.description target="system.description" button=true owner=owner editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      <div class="form-group">
        <label>Quantity</label>
        <input type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number"/>
      </div>
      <div class="form-group">
        <label>Weight</label>
        <input type="text" name="system.weight" value="{{system.weight}}" data-dtype="Number"/>
      </div>
      <div class="form-group">
        <label>Equipped</label>
        <input type="checkbox" name="system.equipped" {{checked system.equipped}}/>
      </div>
      <div class="form-group">
        <label>Armor Value</label>
        <input type="text" name="system.armor" value="{{system.armor}}" data-dtype="Number"/>
      </div>
      <h3>Attribute Bonuses</h3>
      {{#each attributeNames as |label key|}}
      <div class="form-group">
        <label>{{label}}</label>
        <input type="text" name="system.bonus.{{key}}" value="{{lookup ../system.bonus key}}" data-dtype="Number"/>
      </div>
      {{/each}}
    </div>

  </section>
</form>
